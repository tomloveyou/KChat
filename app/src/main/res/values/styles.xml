<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden|stateAlwaysHidden</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- 底部导航栏的颜色 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary
        </item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/progress_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="operation_popshow_anim_style_down">
        <item name="android:windowEnterAnimation">@anim/popshow_operation_anim_down</item>
        <item name="android:windowExitAnimation">@anim/popshow_operation_anim_up</item>
    </style>

    <style name="operation_popshow_anim_style_up">
        <item name="android:windowEnterAnimation">@anim/popshow_operation_anim_up</item>
        <item name="android:windowExitAnimation">@anim/popshow_operation_anim_down</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_progress_dialog" parent="@android:style/Theme.Light.Panel">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
