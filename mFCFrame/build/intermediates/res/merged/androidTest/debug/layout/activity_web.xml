<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f_white"
    android:orientation="vertical" >
    
    <FrameLayout
        android:id="@+id/fl_web_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <WebView
            android:id="@+id/wv_web_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/f_white"
            android:scrollbarSize="0dp"
            android:scrollbars="none" />
        
        <!-- 网络错误，或者服务器错误显示界面 start -->
        <LinearLayout 
            android:id="@+id/ll_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/f_white"
            android:visibility="gone"
            >
            <ImageView 
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/error"
                />
            <TextView 
                android:id="@+id/tv_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出错了"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/tv_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络连接失败"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button 
                android:id="@+id/btn_refresh"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textColor="@color/f_white"
                android:text="刷新"/>
                <!-- <Button 
                android:id="@+id/btn_setting"
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="设置网络"/> -->
            </LinearLayout>
        </LinearLayout>
        <!-- 网络错误，或者服务器错误显示界面 end -->
		<Button 
		    android:id="@+id/btn_net_setting"
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:textSize="13sp"
		    android:text="设置"
		    android:background="@color/btn_normal_bule"
		    android:visibility="gone"
		    />
    </FrameLayout>

</LinearLayout>