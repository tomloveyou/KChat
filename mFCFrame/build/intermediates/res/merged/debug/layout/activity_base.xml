<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/f_main_blue" >

        <Button
            android:id="@+id/btn_main_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_selected"
            android:drawableLeft="@drawable/icon_back"
            android:padding="15dp" />

        <com.mfc.appframe.components.AlwaysMarqueeTextView
            android:id="@+id/tv_title"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/f_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_btn_menu"
            android:background="@drawable/button_selected"
            android:textColor="@color/f_white"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>
	<FrameLayout 
	    android:id="@+id/f_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	</FrameLayout>
</LinearLayout>